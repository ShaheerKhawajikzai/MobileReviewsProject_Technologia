                    <td colspan="2" class="dull-color">@Model.Device.Radio</td>
                </tr>
            }

            <tr>

                <th class="dull-color">USB</th>
                <td colspan="2" class="dull-color">@Model.Device.USB</td>
            </tr>
            <tr>

                <th class="dull-color">NFC</th>
                <td colspan="2" class="dull-color">@Model.Device.NFC</td>
            </tr>
            <tr>

                <th class="dull-color">Data</th>
                <td colspan="2" class="dull-color">@Model.Device.Data</td>
            </tr>
            <tr>
                <th rowspan="8">Features</th>
                <th class="dull-color">Sensors</th>
                <td colspan="2" class="dull-color">@Model.Device.Sensors</td>
            </tr>
            <tr>

                <th class="dull-color">Audio</th>
                <td colspan="2" class="dull-color">@Model.Device.Audio</td>
            </tr>
            <tr>

                <th class="dull-color">Browser</th>
                <td colspan="2" class="dull-color">@Model.Device.Browser</td>
            </tr>
            <tr>

                <th class="dull-color">Messaging</th>
                <td colspan="2" class="dull-color">@Model.Device.Messaging</td>
            </tr>
            <tr>

                <th class="dull-color">Games</th>
                <td colspan="2" class="dull-color">@Model.Device.Games</td>
            </tr>
            <tr>

                <th class="dull-color">Torch</th>
                <td colspan="2" class="dull-color">@Model.Device.Torch</td>
            </tr>
            @if (Model.Device.SEO !="")
            {
                <tr>
                    <th class="dull-color">SEO</th>
                    <td colspan="2" class="dull-color">@Model.Device.SEO</td>
                </tr>
            }
           
            <tr>

                <th class="dull-color">Extra</th>
                <td colspan="2" class="dull-color">@Model.Device.Extra</td>
            </tr>
            <tr>
                <th>Batttery</th>
                <th class="dull-color">Capacity</th>
                <td colspan="2" class="dull-color">@Model.Device.Capacity</td>
            </tr>
            <tr>
                <th>Price</th>
                <th colspan="3" class="dull-color"><span style="margin-right:1.5em">Price in Rs:@Model.Device.PriceInPKRInt</span> <span>Price in Usd:@Model.Device.PriceInUSD</span></th>
            </tr>

        </thead>
    </table>
</div>

