            </tr>
            <tr>

                <th class="dull-color">Bluetooth</th>
                <td colspan="2" class="dull-color">@Model.Device.Bluetooth</td>
            </tr>
            <tr>

                <th class="dull-color">GPS</th>
                <td colspan="2" class="dull-color">@Model.Device.GPS</td>
            </tr>
            @if (isRadio)
            {
                <tr>

