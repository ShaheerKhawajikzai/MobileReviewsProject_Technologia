            </tr>
            <tr>

                <th class="dull-color">Colors</th>
                <td colspan="2" class="dull-color">@Model.Device.Colors</td>
            </tr>
            <tr>
                <th rowspan="@(isFiveG? 4 : 3)">Frequency</th>
