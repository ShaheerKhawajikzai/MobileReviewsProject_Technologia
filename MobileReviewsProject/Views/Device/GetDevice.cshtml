@model GetDeviceBySlugModelResponse

@{
    ViewData["Title"] = @Model.Device.Model;

    bool isFiveG;
    isFiveG = string.IsNullOrWhiteSpace(Model.Device.FiveGBand) ? false : true;

    bool isRadio;
    isRadio = string.IsNullOrWhiteSpace(Model.Device.Radio) ? false : true;
}


@section AdditionalMeta
{
    @* <meta name="keywords" content="@Model.Device.SEO" /> *@
    <meta name="description" content="Compelte detail of @Model.Device.Model | RAM : @Model.Device.BuiltIn | Camera: @Model.Device.Main">
    <meta name="robots" content="index, follow">
}


<div class="detail-image">
    <img src="@Model.Device.ImageUrl" alt="" />
</div>
<div class="product-detail-title">
    <h4>@Model.Device.Model deailed Specifications</h4>
    <p>@Model.Device.Description</p>

    <hr />
</div>

<div class="product-detail-table">
